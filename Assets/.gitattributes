# Ensure consistent line endings for text files
* text=auto

# Explicitly set text files
*.txt text
*.md text
*.ini text
*.py text
*.mel text
*.h text
*.cpp text
*.c text
*.cs text
*.json text
*.xml text
*.yaml text
*.yml text
*.bat text
*.sh text

# Binary files (no diff, no merge)
*.uasset binary
*.umap binary
*.fbx binary
*.obj binary
*.tga binary
*.png binary
*.jpg binary
*.exr binary
*.tif binary
*.hdr binary
*.psd binary
*.mov binary
*.mp4 binary
*.avi binary
*.wav binary
*.ogg binary
*.abc binary
*.vdb binary
*.bgeo binary
*.bgeo.sc binary
*.pc2 binary
*.mdd binary
*.sim binary
*.spp binary
*.sbs binary
*.sbsar binary
*.blend binary
*.mb binary
*.ma binary
*.hip binary
*.hiplc binary

# Git LFS for large assets
*.uasset filter=lfs diff=lfs merge=lfs -text
